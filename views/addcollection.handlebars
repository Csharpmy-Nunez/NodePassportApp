<a href="/"><p class="text-right">{{user.name}}</p></a><br><br>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<div class="btn-group btn-group-justified">
  <a href="#" class="btn btn-info" id="books" data-toggle="modal" data-target="#exampleModal">BOOKS</a>
  <a href="#" class="btn btn-info" id="movies" data-toggle="modal" data-target="#exampleModal">MOVIES</a>
  <a href="#" class="btn btn-info" id="music" data-toggle="modal" data-target="#exampleModal">MUSIC</a>
  <a href="#" class="btn btn-info" id="games" data-toggle="modal" data-target="#exampleModal">GAMES</a>
</div><br>
<div class="btn-group btn-group-justified">
  <a href="#" class="btn btn-info" id="stuff" data-toggle="modal" data-target="#exampleModal">STUFF</a>
  <a href="#" class="btn btn-info" id="loaned" data-toggle="modal" data-target="#exampleModal">LOANED</a>
  <a href="#" class="btn btn-info" id="borrowed" data-toggle="modal" data-target="#exampleModal">BARROWED</a>
  <a href="#" class="btn btn-info" id="whishlist" data-toggle="modal" data-target="#exampleModal">WISHLIST</a>
</div>



<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Collection</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form id="collection_form" method="post" action="/users/addcollection">
        
                <div class="form-group">
            <label for="message-text" class="form-control-label">Collection Type</label><br>
<select class="selectpicker" name="type">
  <optgroup label="Class A Items">
    <option>BOOKS</option>
    <option>MOVIES</option>
    <option>MUSIC</option>
    <option>GAMES</option>
  </optgroup>
  <optgroup label="Class B Items">
    <option>STUFF</option>
    <option>LOANED</option>
    <option>BARROWED</option>
    <option>WISHLIST</option>
  </optgroup>
</select>

          </div>
          <div class="form-group">
            <label for="recipient-name" class="form-control-label">Title:</label>
            <input type="text" class="form-control" name="title">
          </div>
          <div class="form-group">
           <label for="recipient-name" class="form-control-label">Acquisition Date:</label>
            <input type="text" class="form-control" name="acquisitiondate">
          </div>
           <div class="form-group">
            <label for="recipient-name" class="form-control-label">Condition:</label>
            <input type="text" class="form-control" name="condition">
          </div>
           <div class="form-group">
            <label for="message-text" class="form-control-label">Message:</label>
            <textarea class="form-control" name="message"></textarea>
             <input type="hidden" value="{{user.id}}" name="userid">
          </div>
           <button type="submit" class="btn btn-primary">Save Collection</button>
           <input type="reset" class="btn btn-danger">
        </form>
       
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>    
      </div>
     
    </div>
  </div>
</div>
